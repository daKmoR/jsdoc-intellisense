{
  "compilerOptions": {
    "target": "ES2017",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "checkJs": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*"
  ]
}
